body{
    background-color: #e7e7e7;
}

.main-container{
    background-color: #fff;
    margin: 15/16rem;
    padding: 15/16rem;
    height: 1633/16rem;
    .tab-list{
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #EBEEF7;
        .tab-item{
            float: left;
            height: 36/16rem;
            line-height: 36/16rem;
            text-align: center;
            padding-left: 20/16rem;
            padding-right: 20/16rem;
            letter-spacing: 1/16rem;
            font-size: 14/16rem;
            cursor: pointer;
        }
        .tab-active{
            color: #fff;
            background-color: #02A0E9;
        }
    }
    .tab-container{
        .menu-list {
            list-style: none;
            margin: 0;
            padding: 0;
            position: relative;
            //TODO
            height: 48/16rem;
            .menu-item {
                display: none;
                float: left;
                padding-left: 10/16rem;
                padding-right: 10/16rem;
                font-size: 14/16rem;
                line-height: 28/16rem;
                margin-top: 10/16rem;
                margin-bottom: 10/16rem;
                letter-spacing: 1/16rem;
                cursor: pointer;
                -moz-user-select: none;
                -ms-user-select: none;
                -webkit-user-select: none;
                .menu {
                    display: none;
                    cursor: default;
                    left: 0;
                    top: 38/16rem;
                    background-color: #f0f0f0;
                    color: #333;
                    width: 100%;
                    border: solid #e0e0e0 1/16rem;
                    box-shadow: 0 3/16rem 4/16rem rgba(0,0,0,0.18);
                    padding: 20/16rem;
                    position: absolute;
                    z-index: 50;
                    .value {
                        float: left;
                    }
                    .arrowhead {
                        float: right;
                        font-size: 11/16rem;
                    }
                    .menu-title {
                        margin-top: 0;
                        margin-bottom: 0;
                        padding-bottom: 10/16rem;
                        font-size: 15/16rem;
                        letter-spacing: 1/16rem;
                        border-bottom: #ccc dashed 1/16rem;
                    }
                    dl {
                        margin-top: 20/16rem;
                        margin-bottom: 20/16rem;
                        height: 171/16rem;
                        dt {
                            float: left;
                            letter-spacing: 1/16rem;
                            height: 32/16rem;
                            line-height: 32/16rem;
                            font-weight: 600;
                            margin-right: 20/16rem;
                        }
                        dd {
                            float: left;
                            margin-left: 0;
                            .condition-list {
                                margin: 0;
                                padding: 0;
                                list-style: none;
                                width: 960/16rem;
                                min-width: 960/16rem;
                                height: 171/16rem;
                                .label {
                                    float: left;
                                    width: 80/16rem;
                                    letter-spacing: 1/16rem;
                                    height: 32/16rem;
                                    line-height: 32/16rem;
                                    text-align: right;
                                    padding-right: 5/16rem;
                                    margin-bottom: 25/16rem;
                                }
                                .condition {
                                    float: left;
                                    margin-right: 40/16rem;
                                    margin-bottom: 25/16rem;
                                    //TODO
                                    .dropdown-list{
                                    	height: 136/16rem; 
                                        overflow-x: auto;
                                        overflow-y: auto;
                                        .dropdown-item{
                                            text-overflow: ellipsis;
                                        }
                                    }
                                    .keyword {
                                        width: 200/16rem;
                                        height: 32/16rem;
                                        padding-left: 10/16rem;
                                        padding-right: 10/16rem;
//                                      margin: 0;
                                        //TODO
                                        margin-bottom: 11/16rem;
                                        border: solid #ccc 1/16rem;
                                        outline: none;
                                        letter-spacing: 1/16rem;
                                    }
                                    textarea{
                                        height: 150/16rem;
                                        width: 500/16rem;
                                    }
                                }
                                
                            }
                            #allot-list{
                                width: 640/16rem !important;
                                min-width: 640/16rem !important;
                            }
                            .menu-btn {
                                display: block;
                                width: 120/16rem;
                                height: 32/16rem;
                                margin-bottom: 25/16rem;
                                background-color: #F4494E;
                                border: none;
                                cursor: pointer;
                                color: #fff;
                                outline: none;
                                border-radius: 3/16rem;
                                letter-spacing: 1/16rem;
                                font-size: 14/16rem;
                                font-weight: 600;
                                &:active {
                                    background-color: #CD0C12;
                                }
                            }
                        }
                    }
                }
                #searchMenu {
                    height: 270/16rem;
                }
                #allotMenu {
                    height: 220/16rem;
                }
                #allotMenu {
                    height: 220/16rem;
                }
            }
            .item-active {
                color: #fff;
                background-color: #444;
            }
        }
        .error{
            color: red !important;
        }
        .surface {
            display: none;
        }
        .active {
            display: block;
        }
        
        .tab-content{
            display: none;
            .operation-list{
                margin: 0;
                padding: 0;
                height: 48/16rem;
                .operation-item{
                    float: left;
                    height: 48/16rem;
                    line-height: 48/16rem;
                    text-align: center;
                    letter-spacing: 1/16rem;
                    font-size: 14/16rem;
                    padding-left: 10/16rem;
                    padding-right: 10/16rem;
                    cursor: pointer;
                    display:none;
                }
            }
        }
        .content-active{
            display: block;
        }
        .page-list{
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #EBEEF7;
            margin-top: 15/16rem;
            .page-item{
                height: 40/16rem;
                font-size: 14/16rem;
                line-height: 40/16rem;
            }
            .page-info{
                float: left;
                margin-left: 15/16rem;
                span{
                    margin-left: 5/16rem;
                    margin-right: 5/16rem;
                }
            }
            .page-operation{
                float: right;
                margin-right: 10/16rem;
                a{
                    cursor: pointer;
                    padding-left: 5/16rem;
                    padding-right: 5/16rem;
                    &:hover{
                        color: #ff6700;
                    }
                }
                .page-active{
                    color: red;
                    font-weight: 600;
                }
                .page-disable{
                    color: #B9B9B9;
                    cursor: default;
                    &:hover{
                        color: #B9B9B9;
                    }
                }
            }
        }
        
    }
}
